<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/koyuyesil"
    tools:context=".RiskTolerans">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:id="@+id/RiskToleransHesapYazi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risk Tolerans Hesaplanması"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                />
    <TextView
        android:id="@+id/textViewSoru1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Kısa Vadeli Hedefleriniz İçin Yatırım Yapmayı Düşündüğünüz Miktar:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RiskToleransHesapYazi"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        />

    <RadioGroup
        android:id="@+id/radioGroupSoru1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewSoru1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        >

        <RadioButton
            android:id="@+id/radioButton1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:minHeight="48dp"
            android:tag="1"
            android:text="0-25%"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButton1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:tag="2"
            android:text="26-50%"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButton1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:tag="3"
            android:text="51-75%"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButton1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:tag="4"
            android:text="76-100%"
            android:textColor="@color/white" />

    </RadioGroup>

    <TextView
        android:id="@+id/textViewSoru2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Uzun Vadeli Hedefleriniz İçin Yatırım Yapmayı Düşündüğünüz Miktar:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupSoru1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        />

    <RadioGroup
        android:id="@+id/radioGroupSoru2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewSoru2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/white"
        >

        <RadioButton
            android:id="@+id/radioButton2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:minHeight="48dp"
            android:tag="1"
            android:text="0-25%"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButton2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:tag="2"
            android:text="26-50%"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButton2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:tag="3"
            android:text="51-75%"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButton2_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:tag="4"
            android:text="76-100%"
            android:textColor="@color/white" />

    </RadioGroup>
    <TextView
        android:id="@+id/textViewSoru3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Uzun Vadeli Hedefleriniz İçin Yatırım Yapmayı Düşündüğünüz Miktar:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupSoru2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        />

    <RadioGroup
        android:id="@+id/radioGroupSoru3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewSoru3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/white"
        >

        <RadioButton
            android:id="@+id/radioButton3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:minHeight="48dp"
            android:tag="1"
            android:text="0-25%"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButton3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:tag="2"
            android:text="26-50%"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButton3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:tag="3"
            android:text="51-75%"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButton3_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:tag="4"
            android:text="76-100%"
            android:textColor="@color/white" />

    </RadioGroup>
    <TextView
        android:id="@+id/textViewSoru4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Uzun Vadeli Hedefleriniz İçin Yatırım Yapmayı Düşündüğünüz Miktar:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupSoru3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        />

    <RadioGroup
        android:id="@+id/radioGroupSoru4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewSoru4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/white"
        >

        <RadioButton
            android:id="@+id/radioButton4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:minHeight="48dp"
            android:tag="1"
            android:text="0-25%"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButton4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:tag="2"
            android:text="26-50%"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButton4_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="51-75%"
            android:textColor="@color/white"
            android:tag="3"/>

        <RadioButton
            android:id="@+id/radioButton4_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="76-100%"
            android:textColor="@color/white"
            android:tag="4"/>

    </RadioGroup>
    <Button
        android:id="@+id/btnRiskHesap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesapla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupSoru4"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

